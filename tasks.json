{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build huffman",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-o",
                "${workspaceFolder}/huffman",
                "${workspaceFolder}/huffman.c",
                "${workspaceFolder}/probability.c",
                "-lm"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "run huffman",
            "type": "shell",
            "command": "${workspaceFolder}/huffman",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
